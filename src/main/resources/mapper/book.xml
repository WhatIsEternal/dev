<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.test.dao.BookDao">
    <!--添加书籍-->
    <insert id="addBook" parameterType="com.test.entity.Book">
        insert into book values(#{id},#{title},#{typeid},#{bookcontent},#{bookpic},#{price},#{numbers})
    </insert>
    <!--查询-->
    <resultMap id="m2" type="com.test.entity.Book">
        <result property="id" column="id"/>
        <result property="title" column="title"/>
        <result property="numbers" column="numbers"/>
        <association property="btype" javaType="com.test.entity.BookType">
            <result property="name" column="t_name"/>
        </association>
    </resultMap>
    <select id="findAllBook" resultMap="m2">
        select b.id as id,b.title as title,t.type_name as t_name,b.numbers as numbers from book b left join book_type t on b.typeid=t.id
    </select>
    <select id="findBookById" resultType="com.test.entity.Book">
        select * from book where id = #{id}
    </select>
    <update id="upds" parameterType="map">
        update book set numbers=#{numbers} where id=#{id}
    </update>
</mapper>